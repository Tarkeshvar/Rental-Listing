<% layout("/layouts/boilerplate.ejs") %>

<style>
  /* Page Background */
  .receipt-page {
    min-height: 100vh;
    padding: 2rem 0;
  }

  .receipt-container {
    max-width: 500px; /* Slimmer for better receipt feel */
    margin: 0 auto;
    padding: 0 1rem;
  }

  .receipt-card {
    /* Subtle Gradient: White with a hint of red at the bottom right */
    background: radial-gradient(circle at top left, #ffffff 70%, #fff5f5 100%);
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    border: 1px solid #eee;
    position: relative;
  }

  /* Header */
  .receipt-header {
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px dashed #ffdada; /* Themed dashed line */
  }

  .logo-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-icon {
    font-size: 1.8rem;
    color: #fe424d;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    color: #1a1a1a;
  }

  .receipt-type {
    font-size: 0.8rem;
    color: #fe424d;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 800;
    background: #fff0f0;
    padding: 4px 10px;
    border-radius: 20px;
  }

  /* Body */
  .receipt-body {
    padding: 1.5rem;
  }

  .section {
    margin-bottom: 1.25rem;
  }

  .section-title {
    color: #fe424d;
    font-size: 0.75rem;
    font-weight: 800;
    margin-bottom: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .detail-row {
    display: flex;
    justify-content: space-between;
    padding: 0.3rem 0;
  }

  .detail-label {
    color: #777;
    font-size: 0.85rem;
  }

  .detail-value {
    color: #333;
    font-weight: 600;
    text-align: right;
    font-size: 0.85rem;
  }

  /* Total Box */
  .total-row-container {
    background: #ffffff;
    padding: 1rem;
    border-radius: 12px;
    margin-top: 1rem;
    border: 2px solid #fe424d; /* Standout border for the total */
  }

  .total-row .detail-label {
    font-size: 0.95rem;
    color: #1a1a1a;
    font-weight: 700;
  }

  .total-row .detail-value {
    font-size: 1.4rem;
    color: #fe424d;
    font-weight: 900;
  }

  /* Footer */
  .receipt-footer {
    padding: 1.5rem;
    text-align: center;
    border-top: 1px dashed #eee;
  }

  .thank-you {
    font-size: 0.9rem;
    color: #444;
    font-weight: 600;
    margin-bottom: 0.8rem;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.2rem;
    margin-bottom: 0.8rem;
  }

  .social-link {
    color: #fe424d;
    font-size: 1.1rem;
    transition: transform 0.2s;
  }

  .social-link:hover {
    transform: scale(1.2);
  }

  .copyright {
    color: #bbb;
    font-size: 0.7rem;
  }

  /* Action Buttons */
  .action-buttons {
    padding: 0 1.5rem 1.5rem 1.5rem;
    display: flex;
    gap: 0.75rem;
  }

  .btn-action {
    flex: 1;
    padding: 0.7rem;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.85rem;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    border: none;
    cursor: pointer;
  }

  .btn-print {
    background: #fe424d;
    color: white;
  }
  .btn-back {
    background: #f0f0f0;
    color: #444;
  }

  /* PRINT OPTIMIZATION */
  @media print {
    @page {
      size: auto;
      margin: 0;
    }
    body {
      background: white !important;
    }
    nav,
    footer,
    .action-buttons,
    .navbar,
    .f-info {
      display: none !important;
    }
    .receipt-page {
      padding: 0 !important;
      margin: 0 !important;
    }
    .receipt-container {
      max-width: 100% !important;
      width: 100% !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    .receipt-card {
      box-shadow: none !important;
      border: 1px solid #eee !important;
      width: 100% !important;
      border-radius: 0 !important; /* Standard receipt look on paper */
      background: white !important; /* Remove gradient for ink saving */
    }
  }
</style>

<div class="receipt-page">
  <div class="receipt-container">
    <div class="receipt-card">
      <div class="receipt-header">
        <div class="logo-section">
          <i class="fa-solid fa-infinity logo-icon"></i>
          <span class="logo-text">Infora</span>
        </div>
        <span class="receipt-type">Paid</span>
      </div>

      <div class="receipt-body">
        <div class="section">
          <h3 class="section-title">
            <i class="fa-solid fa-user-circle"></i> Guest Info
          </h3>
          <div class="detail-row">
            <span class="detail-label">Name</span>
            <span class="detail-value"><%= booking.user.username %></span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Email</span>
            <span class="detail-value"><%= booking.user.email %></span>
          </div>
        </div>

        <div class="section">
          <h3 class="section-title">
            <i class="fa-solid fa-calendar-check"></i> Stay Details
          </h3>
          <div class="detail-row">
            <span class="detail-label">Property</span>
            <span class="detail-value"><%= booking.listing.title %></span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Dates</span>
            <span class="detail-value">
              <%= new Date(booking.checkIn).toLocaleDateString('en-IN',
              {day:'numeric', month:'short'}) %> - <%= new
              Date(booking.checkOut).toLocaleDateString('en-IN', {day:'numeric',
              month:'short', year:'numeric'}) %>
            </span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Guests</span>
            <span class="detail-value"><%= booking.guests %> Person(s)</span>
          </div>
        </div>

        <div class="section">
          <h3 class="section-title">
            <i class="fa-solid fa-credit-card"></i> Payment Info
          </h3>
          <% const checkInDate = new Date(booking.checkIn); const checkOutDate =
          new Date(booking.checkOut); const nights = Math.ceil((checkOutDate -
          checkInDate) / (1000 * 60 * 60 * 24)); const pricePerNight =
          booking.totalPrice / nights; %>
          <div class="detail-row">
            <span class="detail-label">Fare Breakup</span>
            <span class="detail-value"
              >₹<%= pricePerNight.toLocaleString('en-IN') %> × <%= nights %>
              nights</span
            >
          </div>
          <div class="detail-row">
            <span class="detail-label">Transaction ID</span>
            <span
              class="detail-value"
              style="font-family: monospace; font-size: 0.75rem"
              ><%= booking.razorpayPaymentId %></span
            >
          </div>

          <div class="total-row-container">
            <div class="detail-row total-row">
              <span class="detail-label">Total Amount</span>
              <span class="detail-value"
                >₹<%= booking.totalPrice.toLocaleString('en-IN') %></span
              >
            </div>
          </div>
        </div>
      </div>

      <div class="action-buttons">
        <button onclick="window.print()" class="btn-action btn-print">
          <i class="fa-solid fa-print"></i> Print Receipt
        </button>
        <a href="/profile" class="btn-action btn-back">
          <i class="fa-solid fa-circle-user"></i> My Profile
        </a>
      </div>

      <div class="receipt-footer">
        <p class="thank-you">Thanks for choosing Infora!</p>

        <div class="social-links">
          <a
            href="https://www.instagram.com/infinitvar"
            target="_blank"
            class="social-link"
            ><i class="fa-brands fa-instagram"></i
          ></a>
          <a
            href="https://www.linkedin.com/in/tarkeshvar"
            target="_blank"
            class="social-link"
            ><i class="fa-brands fa-linkedin"></i
          ></a>
          <a
            href="https://github.com/Tarkeshvar"
            target="_blank"
            class="social-link"
            ><i class="fa-brands fa-github"></i
          ></a>
        </div>
        <p class="copyright">© 2026 Infora Private Limited</p>
      </div>
    </div>
  </div>
</div>
