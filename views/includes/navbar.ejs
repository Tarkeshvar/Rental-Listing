<style>
  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: white;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
</style>

<nav
  class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top"
>
  <div class="container-fluid ms-auto">
    <a class="navbar-brand" href="/listings"
      ><i class="fa-solid fa-infinity ms-auto"></i>
      <b style="color: #fe424d" class="infinity ms-auto">infora</b></a
    >

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/listings"><b>Explore</b></a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input
            class="form-control me-2 search-inp"
            type="search"
            name="query"
            placeholder="Search destinations"
            value="<%= typeof query !== 'undefined' ? query : '' %>"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-item nav-link" href="/listings/new">Host with Infora</a>
        <% if(!currUser){ %>
        <a class="nav-item nav-link" href="/signup"><b>Signup</b></a>
        <a class="nav-item nav-link" href="/login"><b>Login</b></a>
        <% } %> <% if(currUser){ %>
        <a class="nav-item nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
