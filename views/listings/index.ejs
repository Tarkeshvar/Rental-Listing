<script>
  // Hero Slider
  let currentSlide = 0;
  const slides = document.querySelectorAll(".slide");

  function showSlide(n) {
    slides.forEach((s) => s.classList.remove("active"));
    currentSlide = (n + slides.length) % slides.length;
    slides[currentSlide].classList.add("active");
  }

  setInterval(() => showSlide(currentSlide + 1), 5000);

  // Tax Toggle
  document
    .getElementById("flexSwitchCheckDefault")
    .addEventListener("click", () => {
      document.querySelectorAll(".tax-info").forEach((info) => {
        info.style.display =
          info.style.display === "inline" ? "none" : "inline";
      });
    });

  // Filter functionality
  document.querySelectorAll(".filter").forEach((filter) => {
    filter.addEventListener("click", function () {
      const category = this.getAttribute("data-category");
      if (category) {
        window.location.href = `/listings?category=${category}`;
      }
    });
  });

  // Set active filter from URL
  const activeCategory = new URLSearchParams(window.location.search).get(
    "category"
  );
  if (activeCategory) {
    document.querySelectorAll(".filter").forEach((filter) => {
      if (filter.getAttribute("data-category") === activeCategory) {
        filter.classList.add("active");
      }
    });
  }
</script>
