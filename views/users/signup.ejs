<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup on Wonderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <table for="username" class="form-label">Username</table>
                <input type="text" id="username" name="username", placeholder="" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <table for="email" class="form-label">Email</table>
                <input type="email" id="email" name="email", placeholder="" class="form-control" required>

            </div>

            <div class="mb-3">
                <table for="password" class="form-label">Password</table>
                <input type="password" id="password" name="password", placeholder="" class="form-control" required>
           
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>