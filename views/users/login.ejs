<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <table for="username" class="form-label">Username</table>
                <input type="text" id="username" name="username", placeholder="" class="form-control" required>
            </div>

            <div class="mb-3">
                <table for="password" class="form-label">Password</table>
                <input type="password" id="password" name="password", placeholder="" class="form-control" required>
           
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>